<div itemscope itemtype="http://schema.org/VideoObject">
    <div class="text-center">
	    <a class="bla-1" href="{link}" itemprop="url">
	    	<span itemprop="thumbnail" itemscope itemtype="http://schema.org/ImageObject">
	        	<img class="img-fluid" src="{image-1}" alt="" title="Смотрите видео: {news}" itemprop="contentUrl">
	        </span>
	    </a>
	    <a class="bla-2" href="{link}">{title}</a>
    </div>
    <meta itemprop="duration" content="PT6M58S">
    <meta itemprop="isFamilyFriendly" content="true">
    <meta itemprop="name" content="{category}  - {title}">
    <meta itemprop="description" content="{news}">
    <meta itemprop="uploadDate" content="{date=Y-m-d}">
</div>
